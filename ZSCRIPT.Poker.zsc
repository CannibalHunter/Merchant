		Radius 18;
		Height 38;
		+SOLID
		+DONTTHRUST
		Mass 800;
	}

	States
	{
		Spawn:
			GMTB L 1
			{
				if (TableState > TState_None)
				{
					if (TableState == TState_Stolen && !TookAllTheMoney && tracer)
					{
						TookAllTheMoney = true;

						int potAmount = Handler.GetPotAmount();
						tracer.A_GiveInventory('MercenaryBucks', potAmount);
						tracer.A_Log(String.Format("You plundered $%i from the table.", potAmount), true);
					}
					A_FadeOut(0.05);
				}
				else
				{
					for (double i = 0; i < 360; ++i)
					{
						A_SpawnParticle(0xAAAAAA, SPF_RELPOS | SPF_FULLBRIGHT, 1, 24, i, QuitDistance, 0, -(pos.z - floorz), startalphaf: 0.25);
					}
				}
			}
			Loop;
	}
}