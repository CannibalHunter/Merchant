	// THINK
	// ----------------------------------------------------------

	private void PokerTick()
	{
		if (Stage < Stage_EndGame && CheckGameEnd(GEType_EndPremature))
		{
			return;
		}

		int totalPlayers = CardPlayers.Size();

		Array<PokerPlayerInfo> quittingPlayers;

		// [Ace] Handles quitting.
		for (int i = totalPlayers - 1; i >= 0; --i)
		{
			Actor p = CardPlayers[i].Player;
			if (p && level.Vec3Diff(p.pos, Table.pos).length() > Table.QuitDistance)
			{
				quittingPlayers.Push(CardPlayers[i]);
			}
		}

		// [Ace] Something's very wrong.
		if (quittingPlayers.Size() == GetRealPlayerCount())
		{
			Table.TableState = Table.TState_Stolen;
		}

		for (int i = quittingPlayers.Size() - 1; i >= 0; --i)
		{
			string quitStr = quittingPlayers[i].GetName().." has left the poker game.";

			// [Ace] If the AI leaves the game, that means you cheated somehow. Either you pushed the actor off a cliff or another player pulled them. Or someone stole the table.
			// In that case, spawn revenge. If you survive it, fuck it, keep the money. You earned it.
			if (quittingPlayers[i].IsAi() && !quittingPlayers[i].Bust && quittingPlayers[i].Bet > 0)
			{
				for (int j = 0; j < totalPlayers; ++j)
				{
					Actor trgt = CardPlayers[j].Player;
					if (!trgt || CardPlayers[j] == quittingPlayers[i])
					{
						continue;
					}

					SpawnMonster(trgt, 'SatanRobo', 50, 1, 0); // [Ace] Extra get fucked.
					SpawnMonster(trgt, 'Necromancer', 100, 5, 50);
					SpawnMonster(trgt, 'PainLord', 100, 5, 40);
					SpawnMonster(trgt, 'PainBringer', 100, 10, 25);
					trgt.A_AlertMonsters();
					break;
				}
				if (quittingPlayers[i].Player is 'HDMerchant')
				{
					HDMerchant(quittingPlayers[i].Player).Pissed = true;
				}
				quitStr = quitStr..String.Format(" They had $%i in bet that was swindled from them. Now face their wrath.", quittingPlayers[i].Bet);
			}
			PrintToPlayers(quitStr);

			if (CardPlayers[DealerIndex] == quittingPlayers[i])
			{
				RotateDealer();
			}
			if (CardPlayers[PlayerIndex] == quittingPlayers[i])
			{
				RotatePlayer();
			}

			quittingPlayers[i].Player = null;
		}
		
		if (--ActionTimer <= 0)
		{
			int bigBlind, smallBlind;
			[bigBlind, smallBlind] = GetBlindsAmount();
			switch (Stage)
			{
				case Stage_BeginRound:
				{
					ActionTimer = 30;
					Stage = Stage_SmallBlind;
					break;
				}
				case Stage_SmallBlind:
				{
					RotatePlayer();
					PlaceBet(CardPlayers[PlayerIndex], smallBlind);
					CardPlayers[PlayerIndex].HasChecked = true;
					ActionTimer = 30;
					Stage = Stage_BigBlind;
					break;
				}
				case Stage_BigBlind:
				{
					RotatePlayer();
					PlaceBet(CardPlayers[PlayerIndex], bigBlind);
					CardPlayers[PlayerIndex].HasChecked = true;
					ActionTimer = 30;
					PlayerIndex = DealerIndex;
					Stage = Stage_DealHoles;
					break;
				}
				case Stage_DealHoles:
				{
					RotatePlayer();
					if (CardPlayers[PlayerIndex].HoleCards.Size() < 2)
					{
						CardPlayers[PlayerIndex].HoleCards.Push(Deck.TakeTopCard());
						CardPlayers[DealerIndex].Player.A_StartSound("Poker/DealCard", 10, CHANF_UI | CHANF_OVERLAP, attenuation: 1.5, pitch: frandom(0.90, 1.05));
						ActionTimer = 20;
					}
					else
					{
						PlayerIndex = DealerIndex;
						RotatePlayer();
						Stage = Stage_InitialBet;
					}
					break;
				}
				case Stage_DealFlop:
				case Stage_DealTurn:
				case Stage_DealRiver:
				{
					int maxCards = 3;
					switch (Stage)
					{
						case Stage_DealTurn: maxCards = 4; break;
						case Stage_DealRiver: maxCards = 5; break;
					}
					if (BurnedCards.Size() < maxCards - 2)
					{
						BurnedCards.Push(Deck.TakeTopCard());
						CardPlayers[DealerIndex].Player.A_StartSound("Poker/DealCard", 10, CHANF_UI | CHANF_OVERLAP, attenuation: 1.5, pitch: frandom(0.90, 1.05));
						ActionTimer = 40;
					}
					else if (CommunityCards.Size() < maxCards)
					{
						CommunityCards.Push(Deck.TakeTopCard());
						CardPlayers[DealerIndex].Player.A_StartSound("Poker/DealCard", 10, CHANF_UI | CHANF_OVERLAP, attenuation: 1.5, pitch: frandom(0.90, 1.05));
						ActionTimer = 20;
					}
					else
					{
						for (int i = 0; i < CardPlayers.Size(); ++i)
						{
							CardPlayers[i].HasChecked = false;
							CardPlayers[i].WinLoss = 0;
						}
						ActionTimer = 20;
						RotatePlayer();
						Stage++;
					}
					break;
				}

				case Stage_InitialBet:
				case Stage_BetFlop:
				case Stage_BetTurn:
				case Stage_BetRiver:
				{
					if (CardPlayers[PlayerIndex].IsAi())
					{
						if (AiMakeDecision())
						{
							RotatePlayer();
							ActionTimer = 0;
						}
					}

					if (CardPlayers[PlayerIndex].HasChecked && CardPlayers[PlayerIndex].Player.CountInv('MercenaryBucks') > 0 && CardPlayers[PlayerIndex].Bet < GetHighestBet())
					{
						CardPlayers[PlayerIndex].HasChecked = false;
					}

					int contValue = CanContinue();
					if (contValue == 2 || contValue == 1 && Stage == Stage_BetRiver)
					{
						ActionTimer = 35 * 8;
						Stage = Stage_EndRound;

						int totalPlayers = CardPlayers.Size();

						Array<PokerPlayerInfo> winners;
						for (int i = 0; i < totalPlayers; ++i)
						{
							if (CardPlayers[i].Player && !CardPlayers[i].HasFolded && !CardPlayers[i].Bust)
							{
								winners.Push(CardPlayers[i]);
							}
						}

						int size = winners.Size();
						for (int i = 0; i < size - 1; ++i)
						{
							for (int j = i + 1; j < size; ++j)
							{
								if (winners[i].HighestRank < winners[j].HighestRank || (winners[i].HighestRank == winners[j].HighestRank && winners[i].HighestKicker < winners[j].HighestKicker))
								{
									let swap = winners[i];
									winners[i] = winners[j];
									winners[j] = swap;
								}
							}
						}

						int winnerCount = 0;
						for (int i = 0; i < size; ++i)
						{
							if (i == 0 || winners[i].HighestRank == winners[0].HighestRank && winners[i].HighestKicker == winners[0].HighestKicker)
							{
								winners[i].Winner = true;
								winnerCount++;
							}
						}

						// [Ace] Yeah, you may lose 50 cents due to truncation. Too bad!
						// No division by zero prevention because if this ever gets divided by zero, something has gone terribly wrong.
						int moneyPerPlayer = GetPotAmount() / winnerCount;
						for (int i = 0; i < winnerCount; ++i)
						{
							winners[i].Player.A_GiveInventory('MercenaryBucks', moneyPerPlayer);
							winners[i].WinLoss += moneyPerPlayer;
						}

						// [Ace] Get rid of broke players.
						for (int i = totalPlayers - 1; i >= 0; --i)
						{
							if (CardPlayers[i].Player && CardPlayers[i].Player.CountInv('MercenaryBucks') == 0 && !CardPlayers[i].Bust)
							{
								PrintToPlayers(CardPlayers[i].GetName().." has dropped out of the poker game. No money to bet with.");
								CardPlayers[i].Bust = true;
							}
						}

						if (CheckGameEnd(GEType_Check))
						{
							ActionTimer = 35 * 5;
							Stage = Stage_EndGame;
						}
					}
					else if (contValue == 1)
					{
						PlayerIndex = DealerIndex;
						ActionTimer = 15;
						Stage++;
					}
					break;
				}

				case Stage_EndRound:
				{
					RotateRound();
					break;
				}

				case Stage_EndGame:
				{
					CheckGameEnd(GEType_EndAny);
					break;
				}
			}
		}
		PokerGameTics++;
	}

	bool CheckGameEnd(int type)
	{
		if (!Table || Table.TableState == Table.TState_Stolen)
		{
			GameInProgress = false;
			Console.Printf("The poker game was disbanded. Somebody stole the game table and all the money on it.");
			return true;
		}

		int totalPlayers = CardPlayers.Size();
		int humanPlayersCount = GetHumanPlayersCount();
		int realPlayers = GetRealPlayerCount();

		if (realPlayers == 1 || humanPlayersCount == 0)
		{
			if (type >= GEType_EndAny)
			{
				GameInProgress = false;
				Table.TableState = Table.TState_GameOver;
				
				Console.Printf("The poker game was disbanded. %s", humanPlayersCount == 0 ? "No human players left." : "Not enough players.");
				if (type == GEType_EndPremature)
				{
					int pot = GetPotAmount();
					if (realPlayers == 1)
					{
						for (int i = 0; i < totalPlayers; ++i)
						{
							if (CardPlayers[i].Player)
							{
								PrintToPlayers(String.Format("The pot containing $%i goes to %s", pot, CardPlayers[i].GetName()));
								CardPlayers[i].Player.A_GiveInventory('MercenaryBucks', pot);
								break;
							}
						}
					}
					else if (realPlayers > 1)
					{
						int splitPot = pot / realPlayers;
						for (int i = 0; i < totalPlayers; ++i)
						{
							if (CardPlayers[i].Player)
							{
								CardPlayers[i].Player.A_GiveInventory('MercenaryBucks', splitPot);
							}
						}
						PrintToPlayers(String.Format("The pot containing $%i was split between the remaining players.", pot));
					}
				}
				// [Ace] Don't remove this again you fucking retard. This is what checks if the merchants are currently in the game or not.
				// If you remove it, they won't get excluded until they bust and are manually removed from the game.
				CardPlayers.Clear();
			}
			return true;
		}
		return false;
	}

